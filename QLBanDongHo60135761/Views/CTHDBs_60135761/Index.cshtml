@model IEnumerable<QLBanDongHo60135761.Models.CTHDB>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenDongHo", rowsPerPage: 5);
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="#" rel="stylesheet" />
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        #gridContent img {
            cursor: pointer;
        }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }
    </style>
</head>
<body>
    <h2>DANH SÁCH CHI TẾT HOÁ ĐƠN BÁN</h2>
    <p>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary", @style = "width: 120px;" })
    </p>
    <div id="gridContent" style="font-size: 16px;">

        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
            columns: new[]
            {
                grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                grid.Column("MaHD","Mã hoá đơn"),
                grid.Column("DongHo.TenDongHo","Tên đồng hồ"),
                grid.Column("SoLuong","Số lượng"),
                grid.Column("DonGia","Đơn giá",format:@<text> @item.DonGia.ToString("#,##0 đồng")</text>),
                                        @*grid.Column("Chức năng",format:@<text>
                                                                <a href="@Url.Action("Edit", new { /* id=item.PrimaryKey */ })"><abbr title="Cập nhật dữ liệu"><img width="20" height="20" src="~/Images/edit.png" /></abbr></a>
                                                                <a href="@Url.Action("Details", new { /* id=item.PrimaryKey */ })"><abbr title="Chi tiết"><img width="20" height="20" src="~/Images/details.png" /></abbr></a>
                                                                <a href="@Url.Action("Delete", new { /* id=item.PrimaryKey */ })"><abbr title="Xoá"><img width="20" height="20" src="~/Images/delete.png" /></abbr></a>
                                            </text>)*@
                                  }
                                  )
    </div>
</body>
</html>