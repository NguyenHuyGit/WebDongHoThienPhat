@model QLBanDongHo60135761.Models.NhanVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string gtinh = "";
}

<h3 style="color: red;">Bạn có chắc muốn xoá thông tin này?</h3>
<table border="0" cellpadding="0" cellspacing="0" style="font-size:16px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <h4 class="text-center"><b>THÔNG TIN CHI TIẾT</b></h4>
                <tr>
                    <td rowspan="32"><img src="/Images/@Html.DisplayFor(model => model.AnhNV)" width="200" height="200" /></td>
                    <th>Mã nhân viên:</th>
                    <td>@Html.DisplayFor(model => model.MaNV)</td>
                </tr>
                <tr>
                    <th>Họ tên nhân viên:</th>
                    <td>@Html.DisplayFor(model => model.HoTenNV)</td>
                </tr>
                <tr>
                    <th>Ngày bắt đầu làm việc :</th>
                    <td>@Html.DisplayFor(model => model.NgayLamViec)</td>
                </tr>
                <tr>
                    <th>Giới tính:</th>
                    <td>
                        @{if (Model.GioiTinhNV == true)
                            { gtinh = "Nam"; }
                            else
                            { gtinh = "Nữ"; }
                        }
                        @gtinh
                    </td>
                </tr>
                <tr>
                    <th>Số điện thoại:</th>
                    <td>@Html.DisplayFor(model => model.SDTNV)</td>
                </tr>
                <tr>
                    <th>Địa chỉ:</th>
                    <td>@Html.DisplayFor(model => model.DiaChiNV)</td>
                </tr>
                <tr>
                    <th>Lương:</th>
                    <td>@Html.DisplayFor(model => model.Luong)</td>
                </tr>
                <tr>
                    <th>Chức vụ:</th>
                    <td>@Html.DisplayFor(model => model.ChucVu.TenChucVu)</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th>Mật khẩu:</th>
                    <td>@Html.DisplayFor(model => model.MatKhau)</td>
                </tr>
                <tr>
                    <th>Quyền đăng nhập:</th>
                    <td>@Html.DisplayFor(model => model.QuyenDangNhapNhanVien.TenQuyenDangNhap)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:100px; margin-top: 10px;">
        <input type="submit" value="Xoá" class="btn btn-danger" style="width: 120px;" />
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary", @style = "width: 120px;" })
    </div>
}