                    <td>@Html.DisplayFor(model => model.MaDH)</td>
                </tr>
                <tr>
                    <th>Tên đồng hồ: </th>
                    <td>@Html.DisplayFor(model => model.TenDongHo)</td>
                </tr>
                <tr>
                    <th>Giá bán: </th>
