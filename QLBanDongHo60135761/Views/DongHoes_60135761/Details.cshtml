@model QLBanDongHo60135761.Models.DongHo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
   
}

<table border="0" cellpadding="0" cellspacing="0" style="font-size:16px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption class="text-center" style="font-size: 20px;"><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="32"><img src="/Images/@Html.DisplayFor(model => model.AnhSanPham)" width="200" height="200" /></td>
