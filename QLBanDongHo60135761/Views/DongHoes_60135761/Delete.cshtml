@model QLBanDongHo60135761.Models.DongHo

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<h3 style="color: red;">Bạn có chắc chắn xoá thông tin này?</h3>
<table border="0" cellpadding="0" cellspacing="0" style="font-size:16px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption class="text-center"><b>THÔNG TIN CHI TIẾT</b></caption>
                <tr>
                    <td rowspan="8"><img src="/Images/@Html.DisplayFor(model => model.AnhSanPham)" width="200" height="200" /></td>
                    <th>Mã đồng hồ: </th>
                    <td>@Html.DisplayFor(model => model.MaDH)</td>
                </tr>
                <tr>
                    <th>Tên đồng hồ: </th>
                    <td>@Html.DisplayFor(model => model.TenDongHo)</td>
                </tr>
                <tr>
                    <th>Giá bán: </th>
                    <td>@Html.DisplayFor(model => model.GiaBan)</td>
                </tr>
                <tr>
                    <th>Mô tả: </th>
                    <td>
                        @Html.DisplayFor(model => model.Mota)
                    </td>
                </tr>
                <tr>
                    <th>Ghi chú: </th>
                    <td>@Html.DisplayFor(model => model.GhiChu)</td>
                </tr>
                <tr>
                    <th>Loại Đồng Hồ: </th>
                    <td>@Html.DisplayFor(model => model.LoaiDongHo.TenLoaiDH)</td>
                </tr>
                <tr>
                    <th>Nhà cung cấp: </th>
                    <td>@Html.DisplayFor(model => model.NhaCungCap.TenNCC)</td>
                </tr>
            </table>
        </td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color" style="margin-left:100px; margin-top: 10px;">
        <input type="submit" value="Xóa" class="btn btn-danger" style="width: 120px;" />
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-primary",@style="width: 120px;" })
    </div>
}
